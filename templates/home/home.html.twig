{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>AmbianceBrew</h1>
    <h2>Savourer l'instant, créer des souvenirs</h2>
    <div id = "container">
        <div id="login">
            <h4>Se connecter</h4>
            <br>
            <h5 id="Email" class="ids">Email/identifiant</h5>
            <input type="text" id="lgn" name="login" placeholder="exemple@mail.com">
            <br>
            <h5 id="psswrd" class="ids">Mot de passe</h5>
            <input type="password" id="mdp" name="mdp" placeholder="Mot de passe">
            <br>
            <button type="submit" id="send">Se connecter</button>
        </div>

        <div id="signin">
            <h4>Créer un compte</h4>
            <br>
            <h5 id="Email" class="ids">Email/identifiant</h5>
            <input type="text" id="lgn" name="login" placeholder="exemple@mail.com">
            <br>
            <h5 id="psswrd" class="ids">Mot de passe</h5>
            <input type="password" id="mdp" name="mdp" placeholder="Mot de passe">
            <br>
            <button type="submit" id="send">Créer le compte</button>
        </div>
    </div>


    <style>
        #container
        {
            text-align:center;
            display: flex;
            width:50vw;
            margin: 0 auto;
        }

        body
        {
            text-align: center;
            background-image:url("/Img/MainMenu/Bar.jpg");
            background-size: 100%;
            height: 100vh;
            width:100vw;
        }

        h1 
        {
            text-decoration: underline;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
            font-size : 120px;
            font-family : Georgia, serif;
        }
        h2
        {
            font-size : 90px;
            align : center;
            color : #008c8c;
            font-family : Brush Script MT, Brush Script Std, cursive;
            position: relative;
            left: 50%;
            transform: translateX(-50%);
        }
        #login
        {
            background-color:#ffffff;
            width:300px;
            height:250px;
            border-radius:15px;
            text-align: center;
            border: 5px solid #008c8c;
        }
        #signin
        {
            background-color:#ffffff;
            width:300px;
            height:280px;
            border-radius:15px;
            text-align: center;
            border: 5px solid #008c8c;
            margin-left: auto;
        }

        #send
        {
            border-radius:15px;
            background-color:#008c8c;
            font-size:25px;
        }

        #login h4, #login h5 
        {
            margin: 0; /* Pour supprimer la marge par défaut des éléments h4 et h5 */
        }

        #login h4
        {
            text-decoration:underline;
        }
        #lgn, #mdp 
        {
            width: 90%; 
            margin-bottom: 15px; 
        }

        #ids
        {
            margin-bottom: 0px; 
        }

    </style>


{% endblock %}